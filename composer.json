{
    "name": "masom/lhm",
    "type": "library",
    "description": "Large Hadron Migrator for phinx",
    "keywords": ["lhm", "phinx", "migrations", "database", "db", "database migrations"],
    "license": "BSD-3-Clause",
    "authors": [
        {
            "name": "Martin Samson",
            "email": "martin.samson@shopify.com"
        }
    ],
    "minimum-stability": "stable",
    "autoload": {
        "psr-4": {
            "Lhm\\": "src/Lhm"
        }
    },
    "autoload-dev": {
      "psr-4": { "Lhm\\Tests\\": "tests/" }
    },
    "require": {
      "php": ">=5.4.0",
      "psr/log": "1.0.0",
      "symfony/console": "~2",
      "symfony/event-dispatcher": "~2",
      "symfony/monolog-bridge": "~2"
    },
    "require-dev": {
        "monolog/monolog": "~1.0",
        "phpunit/phpunit": "4.6.4",
        "robmorgan/phinx": "~0.4.0"
    },
    "suggest": {
        "robmorgan/phinx": "Advanced database migration tool",
        "monolog/monolog": "Allows more advanced logging of the application flow"
    },
    "bin": ["bin/lhm"]
}
